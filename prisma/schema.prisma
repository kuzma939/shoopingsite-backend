generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Product {
  id           Int        @id @default(autoincrement())
  price        Int
  isTop        Boolean
  sku          String
  size         String
  category     String
  image        String
  images       Json
  sizes        String[]
  translations Json

  cartItems    CartItem[]  // üîó –ó–≤‚Äô—è–∑–æ–∫ –∑ –∫–æ—Ä–∑–∏–Ω–æ—é
}

model CartItem {
  id        String   @id @default(cuid())
  sessionId String
  productId Int
  color     String
  size      String
  quantity  Int

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}
