generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  price     Int
  isTop     Boolean
  sku       String
  size      String
  category  String
  image     String

  // üîπ –ü–æ—Ç—Ä—ñ–±–Ω—ñ –¥–ª—è —Ä–æ–±–æ—Ç–∏ –∑ images —ñ sizes –∑ —Ñ—Ä–æ–Ω—Ç—É:
  images    Json
  sizes     String[]

  // üîó –ó–≤‚Äô—è–∑–æ–∫ –∑ –∫–æ—Ä–∑–∏–Ω–æ—é
  cartItems CartItem[]
}

model CartItem {
  id        String   @id @default(cuid())
  sessionId String
  productId Int
  color     String
  size      String
  quantity  Int

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}
